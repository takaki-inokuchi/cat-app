//型チェックのルールを決めているtypescriptのファイル
{
  "compilerOptions": {
    "target": "ES2017",//jsのversion
    "lib": ["dom", "dom.iterable", "esnext"],//ES機能を型チェックできるようにしている
    "allowJs": true,//jsもtypescriptと一緒にコンパイルできるようにしている
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
"include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "functions"]
}
